<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_register_graph"
    app:startDestination="@id/introductionFragment">
  <fragment
    android:id="@+id/introductionFragment"
    android:name="com.example.shoppingapp.fragments.IntroductionFragment"
    android:label="fragment_introduction"
    tools:layout="@layout/fragment_introduction">

    <action
        android:id="@+id/action_introductionFragment_to_accountOptionFragment"
        app:destination="@id/accountOptionFragment"
        app:enterAnim="@anim/to_top" />
  </fragment>

  <fragment
      android:id="@+id/loginFragment"
      android:name="com.example.shoppingapp.fragments.LoginFragment"
      android:label="fragment_login"
      tools:layout="@layout/fragment_login" >
    <action
        android:id="@+id/action_loginFragment_to_registerFragment"
        app:destination="@id/registerFragment"
        app:popUpTo="@id/accountOptionFragment" />
  </fragment>
  <fragment
      android:id="@+id/registerFragment"
      android:name="com.example.shoppingapp.fragments.RegisterFragment"
      android:label="fragment_register"
      tools:layout="@layout/fragment_register" >

    <action
        android:id="@+id/action_registerFragment_to_loginFragment"
        app:destination="@id/loginFragment"
        app:enterAnim="@anim/to_top"
        app:popUpTo="@id/accountOptionFragment" />
    <action
        android:id="@+id/action_registerFragment_to_accountOptionFragment"
        app:popUpTo="@id/accountOptionFragment" />
  </fragment>
  <fragment
      android:id="@+id/accountOptionFragment"
      android:name="com.example.shoppingapp.fragments.AccountOptionFragment"
      android:label="fragment_account_option"
      tools:layout="@layout/fragment_account_option" >

    <action
        android:id="@+id/action_accountOptionFragment_to_loginFragment"
        app:destination="@id/loginFragment"
        app:enterAnim="@anim/from_right"
        app:exitAnim="@anim/to_left"
        app:popEnterAnim="@anim/from_left"
        app:popExitAnim="@anim/to_right" />
    <action
        android:id="@+id/action_accountOptionFragment_to_registerFragment"
        app:destination="@id/registerFragment"
        app:enterAnim="@anim/from_right"
        app:exitAnim="@anim/to_left"
        app:popEnterAnim="@anim/from_left"
        app:popExitAnim="@anim/to_right"/>
  </fragment>
</navigation>