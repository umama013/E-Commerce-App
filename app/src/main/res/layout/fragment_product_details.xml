<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/product_images"
        android:layout_width="0dp"
        android:layout_height="350dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="15dp"
        android:elevation="0dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

      <androidx.viewpager2.widget.ViewPager2
          android:id="@+id/view_pager_product_images"
          android:layout_width="match_parent"
          android:layout_height="match_parent">

      </androidx.viewpager2.widget.ViewPager2>

      <ImageView
          android:id="@+id/close_btn"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:padding="5dp"
          android:src="@drawable/ic_close"
          app:tint="@color/g_black">

      </ImageView>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/product_name_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/product_images"
        app:layout_constraintTop_toBottomOf="@id/product_images">

      <TextView
          android:id="@+id/product_name"
          style="@style/h3"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="Testing"
          android:textStyle="bold">

      </TextView>

      <TextView
          android:id="@+id/product_price"
          style="@style/h3"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="$500"
          android:textColor="@color/g_gray700"
          android:textStyle="bold">

      </TextView>

    </LinearLayout>

    <TextView
        android:id="@+id/product_desc"
        style="@style/h3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="hjkhkjhkh"
        android:textColor="@color/g_gray700"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/product_name_price"
        app:layout_constraintTop_toBottomOf="@id/product_name_price">

    </TextView>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/g_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/product_desc">

    </View>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_color"
        style="@style/h3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Color"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider">


    </androidx.appcompat.widget.AppCompatTextView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/tv_color"
        app:layout_constraintTop_toBottomOf="@id/tv_color">

    </androidx.recyclerview.widget.RecyclerView>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_size"
        style="@style/h3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="10dp"
        android:text="Size"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_color"
        app:layout_constraintTop_toBottomOf="@id/divider">


    </androidx.appcompat.widget.AppCompatTextView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/tv_size"
        app:layout_constraintTop_toBottomOf="@id/tv_size">

    </androidx.recyclerview.widget.RecyclerView>


    <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
        android:id="@+id/btn_add_to_cart"
        style="@style/blueButtonStyle"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="10dp"
        android:text="Add To Cart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </br.com.simplepass.loadingbutton.customViews.CircularProgressButton>


  </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>